
@{
    ViewBag.Title = "PendingOrders";
}

<h2>PendingOrders</h2>

<h2>Pending Orders</h2>
<table class="table table-bordered">
    <tr>
        <th>Order ID</th>
        <th>Customer</th>
        <th>Total</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Customer.Name</td>
            <td>@item.Total</td>
            <td>@item.Date</td>
            <td>
                <a href="/Admin/ApproveOrder/@item.Id" class="btn btn-success">Approve</a>
                <a href="/Admin/CancelOrder/@item.Id" class="btn btn-danger">Cancel</a>
            </td>
        </tr>
    }
</table>
