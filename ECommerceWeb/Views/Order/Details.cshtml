
@{
    ViewBag.Title = "Details";
}

<h2>Order Details</h2>
<h3>Order ID: @Model.Id</h3>
<td>
    @{
        ECommerceWeb.Enums.OrderStatus status = (ECommerceWeb.Enums.OrderStatus)item.StatusId;
    }
    @status.ToString()
    @if (item.StatusId == (int)OrderStatus.PendingApproval)
    {
        <span class="badge bg-warning">Pending Approval</span>
    }
</td>
<table class="table table-bordered">
    <tr>
        <th>PId</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Unit Total</th>
    </tr>
    @foreach (var item in Model.OrderDetails)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Qty</td>
            <td>@item.Price</td>
            <td>@(item.Qty * item.Price)</td>
        </tr>
    }
    <tr>
        <th colspan="3">Grand Total</th>
        <th>@Model.Total</th>
    </tr>
</table>

